@model ECommerceApp.Models.User

@{
    ViewBag.Title = "Register Now";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        }

        .register-form {
            text-align: center;
        }

        .register-form h2 {
            margin-bottom: 20px;
        }

        .register-form label {
            font-weight: bold;
        }

        .register-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .register-form button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .register-form button:hover {
            background-color: #0056b3;
        }

        .register-form p {
            margin-top: 20px;
        }

        .register-form a {
            color: #007bff;
            text-decoration: none;
        }

        .register-form a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="register-form">
            <h2>Register Now</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <label for="username">Username:</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "required" })

                    <br />

                    <label for="password">Password:</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" })

                    <br />

                    <label for="email">Email:</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", type = "email" })

                    <br />

                    <button type="submit">Register</button>
            }
            <p>Already have an account? <a href="@Url.Action("Login")">Login Now</a></p>
        </div>
    </div>
</body>
</html>
