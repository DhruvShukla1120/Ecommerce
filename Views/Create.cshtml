@model E_commerce_websites.Models.Delivery

<h2>Create Delivery</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryDate"></label>
        <input asp-for="DeliveryDate" type="date" class="form-control" />
        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDelivered"></label>
        <input asp-for="IsDelivered" class="form-check-input" />
        <span asp-validation-for="IsDelivered" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryAgentId"></label>
        <select asp-for="DeliveryAgentId" class="form-control" asp-items="ViewBag.DeliveryAgentId"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
