@{
    ViewData["Title"] = "FAQ Page";
}



<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        /* Custom CSS for FAQ page */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .faq-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        }

        .faq {
            margin-bottom: 20px;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 15px;
        }

        .faq-question {
            font-weight: bold;
            cursor: pointer;
            color: #343a40;
            transition: color 0.3s;
        }

        .faq-answer {
            display: none;
            margin-top: 10px;
            color: #6c757d;
            line-height: 1.6;
        }

            .faq-answer.show {
                display: block;
            }

        /* Reset default margin and padding for consistent styling */
        body, h1, form {
            margin: 0;
            padding: 0;
        }

        /* Basic styling for the header */
        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 1rem;
        }

        /* Styling for the contact form */
        .contact-form {
            max-width: 600px;
            margin: 2rem auto;
            padding: 1rem;
            border: 1px solid #ddd;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        input, textarea {
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            background-color: #333;
            color: #fff;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="faq-container">
        <h2>Frequently Asked Questions</h2>

        <div class="faq">
            <div class="faq-question">How do I place an order?</div>
            <div class="faq-answer">To place an order, simply browse our products, add items to your cart, and proceed to checkout. Follow the prompts to provide shipping and payment details, and you're all set!</div>
        </div>

        <div class="faq">
            <div class="faq-question">What payment methods do you accept?</div>
            <div class="faq-answer">We accept major credit and debit cards, as well as PayPal, Apple Pay, and Google Pay for secure and convenient payments.</div>
        </div>

        <div class="faq">
            <!-- ... Add more FAQ items ... -->
        </div>



        

        <!-- Add more eCommerce-related FAQ items -->

    </div>


 
    
        <header>
            <h1>Contact Us</h1>
        </header>
        <section class="contact-form">
            <form>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="message">Message:</label>
                <textarea id="message" name="message" rows="4" required></textarea>

                <button type="submit">Submit</button>
            </form>
        </section>
   



<script>
        // JavaScript code for toggling FAQ answers
        const faqItems = document.querySelectorAll('.faq');



        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            const answer = item.querySelector('.faq-answer');



            question.addEventListener('click', () => {
                answer.classList.toggle('show');
                question.style.color = answer.classList.contains('show') ? '#007bff' : '#343a40';
            });
        });
    </script>
</body>
</html>