@model YourNamespace.Models.Order

@{
    ViewBag.Title = "Return and Refund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Return and Refund - Order #@Model.OrderId</h2>

<p>Order Date: @Model.OrderDate</p>
<!-- Display other order details here -->

@using (Html.BeginForm("SubmitReturn", "Order", new { orderId = Model.OrderId }, FormMethod.Post))
{
        <div class="form-group">
        @Html.LabelFor(model => model.OrderId, "Order ID", new { @class = "control-label" })
        @Html.DisplayFor(model => model.OrderId)
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.Reason, "Reason for Return", new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Reason, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(model => model.Reason)
        </div>

        <button type="submit" class="btn btn-primary">Submit Return Request</button>
}

<div>@ViewBag.Message</div>
